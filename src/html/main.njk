{% extends 'layouts/application.njk' %}
{% from 'macros/helpers.html' import spriteForLink,sprite %}


{% block content %}

<div class="page__wrapper page__wrapper--main-page">

  {% include 'components/_header.njk' %}

  <main class="main">

    <section class="available-coins section-wrapper">
      <h2 class="section-title">Монеты в наличии</h2>

      <div class="container container--padding-off">
        <div class="catalog">
          <div class="catalog__inner">

          {% include 'components/_catalogItem.njk' %}

          <div class="catalog-item-wr is-hovered">
            <div class="catalog-item">
                <div class="catalog-item__field-container">
                  <div class="catalog-item__img">
                    <img src="../images/content/content-3.png" alt="">
                  </div>
                </div>
                <div class="catalog-item__field-container catalog-item__field-container--off" name="heading">
                  <h3 class="catalog-item__heading">США 20 долларов 1905 </h3>
                </div>
                <div class="catalog-item__field-container">
                  <div class="catalog-item__desc-box">
                    <p class="catalog-item__desc-field">
                      <span class="catalog-item__prop">Состояние:</span>
                      <span class="catalog-item__value">XF</span>
                    </p>
                    <p class="catalog-item__desc-field">
                      <span class="catalog-item__prop">Год выпуска:</span>
                      <span class="catalog-item__value">1890</span>
                    </p>
                    <p class="catalog-item__desc-field">
                      <span class="catalog-item__prop">Материал:</span>
                      <span class="catalog-item__value">медь</span>
                    </p>
                    <p class="catalog-item__desc-field">
                      <span class="catalog-item__prop">Вес:</span>
                      <span class="catalog-item__value">1,28 г</span>
                    </p>
                  </div>
                </div>
                <div class="catalog-item__field-container" name="oldPrice">
                  <strong class="catalog-item__price catalog-item__price--old-price">59 496 ₽</strong>
                </div>
                <div class="catalog-item__field-container" name="price">
                  <strong class="catalog-item__price">59 496 ₽</strong>
                </div>
                <div class="catalog-item__field-container">
                  <i class="catalog-item__rare">
                    <span class="icon-text">редкая монета</span>
                    {{ sprite('icon-diamond') }}
                  </i>
                </div>
                <div class="catalog-item__field-container catalog-item__field-container--off">
                  <button class="btn-black">в избранное</button>
                </div>
                <div class="catalog-item__field-container catalog-item__field-container--off">
                  <button class="btn-gold">в корзину</button>
                </div>
                {{ spriteForLink('icon-favorite') }}
                {{ spriteForLink('icon-basket') }}
            </div>
          </div>

            {# {% include 'components/_catalogItem.njk' %} #}
            {% include 'components/_catalogItem.njk' %}
            {% include 'components/_catalogItem.njk' %}
            {% include 'components/_catalogItem.njk' %}
            {% include 'components/_catalogItem.njk' %}
            {% include 'components/_catalogItem.njk' %}
            {% include 'components/_catalogItem.njk' %}
          </div>
        </div>
      </div>

    </section>

    <section class="news-section section-wrapper">
      <h2 class="section-title">Новости</h2>
      <div class="container container--padding-off">
        <div class="news-list">
          {% include 'components/_news.njk' %}
        </div>
      </div>
    </section>

    {% import 'components/_forms.njk' as forms %}

    {{ forms.subscribe() }}
  </main>

  {% block footer %}

   {% include 'components/_footer.njk' %}

  {% endblock %}

</div>

{% endblock %}
