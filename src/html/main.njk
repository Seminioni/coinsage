{% extends 'layouts/application.html' %}


{% block content %}

<div class="page__wrapper page__wrapper--main-page">

  <header data-controller="header" class="header header--with-bg">

    <div class="header__top">

      <a href="#" data-action="click->header#onBurgerBtnClick" data-target="header.burgerBtn" class="burger">
        <span class="burger__bar"></span>
      </a>
      <a href="index.html" class="logo logo--gold">
        {{ sprite('icon-logo', '', 'logo__icon') }}
      </a>
      <a href="index.html" class="basket">
        {{ sprite('icon-basket') }}
      </a>
      <nav class="nav"></nav>

      <div class="lang-switcher"></div>
      <div class="search-field"></div>

    </div>

    <div class="header__container">
      <a href="index.html" class="logo logo--white logo--vertical logo--big">
        {{ sprite('icon-logo') }}
      </a>
      <p class="header__title">Нумизматический<br>интернет-магазин</p>

      <div class="lang-switcher lang-switcher--vertical">
        <h3 class="lang-switcher__heading">Выберите язык</h3>
        <label class="lang-switcher__list-item">
          <input type="radio" name="lang-switcher" class="lang-switcher__radio" checked="true">
          <span>Ru</span>
        </label>
        <label class="lang-switcher__list-item">
          <input type="radio" name="lang-switcher" class="lang-switcher__radio">
          <span>Eng</span>
        </label>
      </div>
    </div>

    <div data-target="header.mobileMenu" class="mobile-menu">
      <div data-action="click->header#onMobileMenuExitCross" class="btn-cross"></div>
      <div class="mobile-menu__inner">
        <nav class="nav nav--vertical">
          <a href="#" class="nav__item link">Каталог</a>
          <a href="#" class="nav__item link">О нас</a>
          <a href="#" class="nav__item link">Покупка</a>
          <a href="#" class="nav__item link">Контакты</a>
          <a href="#" class="nav__item link">Личный кабинет</a>
          <a href="#" class="nav__item link">Избранное</a>
        </nav>
      </div>
    </div>

  </header>

  <main class="main">

  </main>

  {% block footer %}
  {% endblock %}

</div>

{% endblock %}
